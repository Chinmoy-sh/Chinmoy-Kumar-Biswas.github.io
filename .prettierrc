{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "useTabs": false,
    "overrides": [
        {
            "files": [
                "*.json"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [
                "*.md"
            ],
            "options": {
                "proseWrap": "always",
                "printWidth": 80
            }
        },
        {
            "files": [
                "*.css"
            ],
            "options": {
                "singleQuote": false
            }
        }
    ]
}